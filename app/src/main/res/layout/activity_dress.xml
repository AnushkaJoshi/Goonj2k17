<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/litba"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.boombar.drjoshi.fragment.Dress.Dress">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="DRESS TO IMPRESS (RAMP)"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#7d00ff6a"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Rules and Guidelines"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#7300ffea"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="
1. Maximum of 21 participants are allowed per team including 10 boys and 10 girls and one narrator.\n
2. 5-8 minutes are allowed per team.\n
3. Only 3 formations are allowed.\n
4. Projector not allowed.\n
5. Show stopper will be included in team of 21 members.\n
6. No touching, no decoration on stage .\n
7. Props allowed, same theme of last three years not to be used for particular branch.\n
8. Entry – exit within 8 mins.\n
9. Stage cleaning time – 90 seconds.\n
Criteria of judging:\n
1. Theme\n
2. Coordination\n
3. Innovation (Formation)\n
4. Costume"
                android:textSize="16dp"
                android:typeface="monospace"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Points in GOONJ:"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#8df99900"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="
1. 100\n
2. 75\n
3. 50"
                android:textSize="16dp"
                android:typeface="monospace"
                android:textColor="#000"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
