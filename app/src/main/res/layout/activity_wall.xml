<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/monalisa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.boombar.drjoshi.fragment.Art.Wall">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="HALLABOL(NUKKAD)"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#7d00ff6a"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Rules and Guidelines"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#7300ffea"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="1. Only one entry per team is allowed.\n
2. Participants have 2:30 hours for painting the wall of 5ft Ã— 5ft.\n
3. Area for painting will be provided by organizing committee.\n
4. Uses of articles other than the colours are not allowed.\n
5. It is the theme based event.\n
6. Maximum 7 members per team are allowed.\n
Criteria of Judging:\n
1. Theme\n
2. Creativity\n
3. Appearance\n
4. Explanation"
                android:textSize="16dp"
                android:typeface="monospace"
                android:textColor="#fff"
                android:gravity="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="Points in GOONJ:"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#ffff"
                android:background="#8df99900"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="
1. 60\n
2. 45\n
3. 30"
                android:textSize="16dp"
                android:typeface="monospace"
                android:textColor="#fff"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
